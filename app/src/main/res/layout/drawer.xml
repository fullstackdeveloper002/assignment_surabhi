<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="drawerVM"
            type="com.mentor.pipes.activity.drawer.DrawerViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout

        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:openDrawer="end">

        <FrameLayout
            android:id="@+id/complete_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="start"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/homeframe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/bottomBar"
                    android:background="@color/white"
                    android:gravity="start"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/topBar"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/red"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <FrameLayout
                            android:id="@+id/linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/topBar"
                            android:background="@color/white"
                            android:gravity="start"
                            android:orientation="vertical" />

                    </RelativeLayout>
                </FrameLayout>

                <include
                    android:id="@+id/bottomBar"
                    layout="@layout/bottom_custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />


            </RelativeLayout>

            <!-- <FrameLayout
                 android:id="@+id/frmmlll"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 />-->


        </FrameLayout>

        <!-- //RecyclerView-->
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/headerRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/head_logo"
                            android:layout_width="120dp"
                            android:layout_height="90sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/padding_15"
                            android:layout_marginTop="@dimen/padding_15"
                            android:layout_marginEnd="@dimen/padding_15"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:src="@drawable/logo_png" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="Himanshu"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvName"
                            android:gravity="center"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.home()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/text_size_22"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/home"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/gray_text_color"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Home"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearProductList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.products()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/ic_order"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Products"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.orders()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/ic_orders"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Orders"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearDistributorDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.distributorDetail()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/ic__adduser"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Distributor Detail"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray_text_color" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.aboutus()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/ic_about_us"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="About KPT"

                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.complain()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/ic_call_us"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/gray_text_color"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Complaint"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.support()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/ic_baseline_support_agent_24"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Support"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{()->drawerVM.logout()}"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_25"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/ic_baseline_login_24"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/gray_text_color"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Logout"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_20">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/gray_text_color" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="Version 1.3 \n 01.03.2022"
                            android:textColor="@color/gray_text_color"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

</layout>